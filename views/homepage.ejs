                    <br><br><br><br><br>
                    <button type="submit" class="submit-btn">Log In</button><br>
                </form>
                <form id="register" class="input-group" onsubmit="regotp(); return false;" method="post">
                    <input type="text" class="input-field" name="username" placeholder="Enter your full name" pattern="[A-Za-z]{5,32}" required1 title="Must have min 5characters">
                    <!--<input type="number" class="input-field" name="age"  placeholder="Enter your age" pattern="[0-9]{2}" min="10" max="100" required title="Enter a value between 10-100">-->
                    <input type="date" class="input-field" name="dob" placeholder="Enter your Date of birth" required1>
                    <input type="email" class="input-field" name="email" placeholder="Email Id" required1 >
                    <input type="text" class="input-field" name="phone" id="phone" size="10" placeholder="Enter your phone number" pattern="[0-9]{10}" required1 title="Must have only 10digits">
