<link rel="stylesheet" type="text/css" href="../styles/admin.css">
<style>
    html, body{
        margin-bottom: 5%;
        padding-bottom: 10%;
    }
</style>
<%- include('adminnav'); %>

<center>



    <div id="container">

        <div class="sidebar">
            <br>
            <ul id="nav">
                <li>
                    <span>
            </span>
                    <button id="userssee" class="adminbutton">Users</button>
                </li>
                <br><br><br>
                <li>
                    <span>
           </span><button id="convos" class="adminbutton">Conversations</button>
                </li>
                <br><br><br>
                <li>
                    <span>
              </span><button id="authentications" class="adminbutton">Authentication</button>
                </li>
            </ul>

        </div>

        <div class="content">

            <div id="usertable">
                <h1>Users</h1>
                <br>
                <table>
                    <tr>
                    <th>User ID</th>
                    <th>User Name</th>
                    <th>Date of Birth</th>
                    <th>Gender</th>
                    <th>Phone Number</th>
                    <th>Bio</th>
                    <th>Email</th>
                    <th>Remove user</th>
                    </tr>
                   <% data.forEach((element) => { %> 
                        
                        <tr>
                            <td><%- element.userid %></td>
                            <td><%- element.Username %></td>
                            <td><%- element.dob %></td>
                            <td><%- element.gender %></td>
                            <td><%- element.phone %></td>
                            <td><%- element.bio %></td>
                            <td><%- element.email %></td>
                            <td><button class="remuser">Remove</button></td>
                        </tr>
                        
                        <% }) %>
                   
                </table>

            </div>

            <div id="convtable" style="display: none;">
                <br>
                <h1>Conversations</h1>
                <br>
                <table>
                    <tr>
                        <th>Conversation ID</th>
                        <th>User 1</th>
                        <th>User 2</th>
                        <th>Last message</th>
                        <th>Delete Conversation</th>
                    </tr>
                    <% datac.forEach((element) => { %> 
                        
                        <tr>
                            <td><%- element.convid %></td>
                            <td><%- element.id1 %></td>
                            <td><%- element.id2 %></td>
                            <td><%- element.datetime %></td>
                            <td><button class="remuser">Delete</button></td>
                        </tr>
                        
                        <% }) %>

                </table>

            </div>


            <div id="authentable" style="display: none;">
                <br>
                <h1>Authentication</h1>
                <br>
                <table>
                    <tr>
                        <th>User 1</th>
                        <th>User 2</th>
                    </tr>
                    <% dataa.forEach((element) => { %> 
                        
                        <tr>
                           
                            <td><%- element.id1 %></td>
                            <td><%- element.id2 %></td>
                            <td><button class="remuser">Delete</button></td>
                        </tr>
                        
                        <% }) %>

                </table>

            </div>


        </div>


    </div>
    </center>

    <br><br><br>

    
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery.form/3.51/jquery.form.min.js"></script>

<script>
    $(document).ready(function(){
        $('#convos').click(function(){
            $('#convtable').show();
            $('#usertable').hide();
            $('#authentable').hide();
        })

        $('#userssee').click(function(){
            $('#convtable').hide();
            $('#usertable').show();
            $('#authentable').hide();
        })

        $('#authentications').click(function(){
            $('#convtable').hide();
            $('#usertable').hide();
            $('#authentable').show();
        })
    })
</script>